
%h1=@postcode.postcode
%h2=@postcode.borough.name


%p
  Big Chain Coffee:
  =@postcode.count_high_street_coffee

%p
  Bike Shops:
  =@postcode.check_place(types: "bicycle_store").count
%p
  Independent Bike Shops:
  =@postcode.check_place(types: "bicycle_store").count - @postcode.count_high_street_bikes

%p
  Vegan Spots:
  =@postcode.check_place(types: "restaurant", keyword: "vegan").count


.grid-items
  %a.grid-item{:href => "javascript:void(0)"}
    %img{:alt => "", :src => "https://raw.github.com/Magnus-G/Random/master/placeholder_logo_1.png"}
      %h1
        Zip Code
        =@postcode.postcode
      %p=@postcode.borough.name
  %a.grid-item.grid-item-big.grid-item-image{:href => "javascript:void(0)"}
    %img{:alt => "", :src => "https://raw.github.com/Magnus-G/Random/master/placeholder_logo_2.png"}
      %h1 Does this look Hipster to you?
      -@instagram.each do |instagram|
        %p= image_tag instagram["images"]["low_resolution"]["url"]
        %p= instagram["tags"]
  %a.grid-item.grid-item-big{:href => "javascript:void(0)"}
    %img{:alt => "", :src => "https://raw.github.com/Magnus-G/Random/master/placeholder_logo_3.png"}
      %h1 Foursquare Info
      -@clients.each do |client|
        %p= client.name
        %p= client.categories.first.name
        %p
          = client.location.distance
          meters away
        %p
          = client.stats.checkinsCount
          check ins
  %a.grid-item{:href => "javascript:void(0)"}
    %img{:alt => "", :src => "https://raw.github.com/Magnus-G/Random/master/placeholder_logo_2.png"}
      %h1 Zoopla Info
      %p
        = 'Hipsters have caused this areas property vaule to change by  '
        = @postcode.growth_average 
        ='% of the last 5 years.'
  %a.grid-item{:href => "javascript:void(0)"}
    %img{:alt => "", :src => "https://raw.github.com/Magnus-G/Random/master/placeholder_logo_2.png"}
      %h1 Last Grid Item
      %p Lorem ipsum dolor sit amet, elit. Rem, illum.
  %a.grid-item{:href => "javascript:void(0)"}
    %img{:alt => "", :src => "https://raw.github.com/Magnus-G/Random/master/placeholder_logo_3.png"}
      %h1 A Grid Item
      %p Lorem ipsum dolor sit amet, elit. Rem, illum.
  %a.grid-item{:href => "javascript:void(0)"}
    %img{:alt => "", :src => "https://raw.github.com/Magnus-G/Random/master/placeholder_logo_1.png"}
      %h1 Item
      %p Lorem ipsum dolor sit amet, elit. Rem, illum.


