/ - content_for :templates do
/   %script{type: "text/template", id: "population-percents"}

%h1
  = @borough.name

%ul
  %li#population_percent_youth
    = @borough.population_percent_youth 
  %li#population_percent_working
    = @borough.population_percent_working
  %li#population_percent_senior
    = @borough.population_percent_senior
  %li#population_percent_foreign
    = @borough.population_percent_foreign

%h3 Demographics
%canvas{id: "myChart", width: "400", height:"400"}

:javascript
      var ctx = $("#myChart").get(0).getContext("2d");
      var data = [ 
        {
          value : #{@borough.population_percent_youth},
          color: "#5FBEBE"
        },
        {
          value : #{@borough.population_percent_working},
          color: "#98C79A"
        },
        {
          value : #{@borough.population_percent_senior},
          color: "#6997B1"
        },
        {
          value : #{@borough.population_percent_foreign},
          color: "#A7BB75"
        }
      ];

  new Chart(ctx).PolarArea(data, {
    scaleOverride: true,
    //** Required if scaleOverride is true **
    //Number - The number of steps in a hard coded scale
    scaleSteps : 8,
    //Number - The value jump in the hard coded scale
    scaleStepWidth : 10,
    //Number - The centre starting value
    scaleStartValue : 0
  });
